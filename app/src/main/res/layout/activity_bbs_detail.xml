<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.ethan.share01.BbsDetailActivity">

    <TextView
        android:id="@+id/bbs_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="여기엔 제목이 주~~욱~~"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/bbs_detail_etc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전지현 / 여 35세 / 11km"
        android:layout_marginLeft="10dp"
        android:textSize="14dp"
        android:textColor="#000000" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_margin="0dp">

        <ImageView
            android:id="@+id/bbs_detail_photo"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:src="@drawable/ic_menu_noprofile" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/bbs_detail_pay"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="공유비용 : 아이스아메리카노 1잔"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="#1155EE"/>

        <TextView
            android:id="@+id/bbs_detail_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="대한 사람 대한으로 우리나라 만세"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/bbs_detail_memo_msg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="문의할 내용을 댓글로 작성해 보세요."
            android:inputType="text"/>

        <Button
            android:id="@+id/bbs_detail_memo_write"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="0dp"
            android:background="#b45705"
            android:text="댓글 달기"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ListView
            android:id="@+id/bbs_detail_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp">
        </ListView>
    </LinearLayout>

</LinearLayout>
